<div class="grid grid-cols-1 justify-center items-center w-full gap-6">
  <% @posts.each do |post| %>
    <div class='w-full max-w-sm sm:max-w-md md:max-w-lg lg:max-w-2xl xl:max-w-4xl rounded-lg border border-gray-200 bg-slate-50 shadow-sm p-8 mx-auto'>
      
      <div>
        <%= image_tag post.user.photo, class:"rounded-lg object-cover" if post.user.photo.attached? %>
      </div>

      <div class="font-bold text-xl mb-2   ">
        <%= post.user.email.split('@').first.capitalize if post.user %>
      </div>

      <div class="mb-2">
        <%= image_tag post.photo, class: 'md:max-w-[50%] mb-2' if post.photo.attached? %>
      </div>

      <div class="px-2 mb-2">
        <%= post.description %>
      </div>
         
      <div class="mb-2">
      <%= render partial: 'likes', locals: {post: post} %>
      </div>


      <% if post.user == current_user %>
        <div class="mt-4 flex flex-col sm:flex-row justify-between w-full">
          <%= link_to 'Edit Post', edit_post_path(post.id), class: 'w-full text-center text-white sm:text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800' %>
          <%= button_to 'Delete Post', post_path(post.id), method: :delete, class: 'w-full text-white text-center md:text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800' %>
        </div>
      <% end %>

      <div class='px-4 py-6 bg-slate-200 mb-2 '>
        <h4 class='text-center font-bold'>Comments</h4>
        <% post.comments.each do |comment| %>
          <div class="border border-gray-200 rounded mb-2 px-4 py-6">
            <div>
            <strong><%= comment.user.email.split('@').first %></strong>: 
            </div>
            <div class="flex justify-between items-center text-gray-900">
              <%= comment.content %>
              <% if comment.user == current_user %>
                <%= button_to 'Delete', post_comment_path(post, comment), method: :delete, class: 'px-1 py-1 bg-red-600 hover:bg-red-700 rounded text-white' %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <%= simple_form_for Comment.new, url: post_comments_path(post), method: :post do |f| %>
        <%= f.input :content, label: 'Comment', placeholder: 'Add a comment...', label_html: {class: 'flex items-center mt-2'}, input_html: {class: 'mt-2 w-full border-none outline-none focus:outline-none'} %>
        <%= f.submit 'Post', class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 w-full' %>
      <% end %>
   </div>
  <% end %>
</div>
